{
    "manifest_version": 2,
    "author": "Grant Winney",
    "homepage_url": "https://github.com/grantwinney/chrome-extension-block-comments",

    "name": "Hide Comments",
    "description": "Hides some major commenting systems like Disqus, Livefyre, Facebook plugin, WordPress, YouTube, etc.",
    "version": "1.0.2",

    "update_url": "http://clients2.google.com/service/update2/crx",

    "permissions": [
        "storage",
        "<all_urls>"
    ],

    "browser_action": {
        "icon": "images/hide-comments-32.png"
    },

    "background": {
        "scripts": [
            "js/shared.js",
            "js/background.js"
        ]
    },

    "content_scripts": [
        {
            "js": [
                "js/arrive.min.js",
                "js/shared.js",
                "js/youtube.js"
            ],
            "matches": [
                "*://*.youtube.com/*"
            ]
        },
        {
            "js": [
                "js/arrive.min.js",
                "js/shared.js",
                "js/others.js"
            ],
            "matches": [
                "<all_urls>"
            ],
            "exclude_matches": [
                "*://*.youtube.com/*"
            ]
        }
    ],

    "icons": {
        "16": "images/hide-comments-16.png",
        "32": "images/hide-comments-32.png",
        "48": "images/hide-comments-48.png",
        "64": "images/hide-comments-64.png",
        "128": "images/hide-comments-128.png"
    }
}
