{
    "manifest_version": 2,
    "author": "Grant Winney",
    "homepage_url": "https://github.com/grantwinney/chrome-extension-block-comments",

    "name": "Hide Comments",
    "description": "Hides some major commenting systems like Disqus, Livefyre, Facebook plugin, WordPress, YouTube, etc.",
    "version": "1.0.8",

    "update_url": "http://clients2.google.com/service/update2/crx",

    "options_page": "options.html",

    "permissions": [
        "tabs",
        "storage",
        "https://raw.githubusercontent.com/grantwinney/hide-comments-in-chrome/master/sites.json",
        "https://raw.githubusercontent.com/grantwinney/hide-comments-in-chrome/master/sites-version.json"
    ],

    "browser_action": {
        "icon": "images/hide-comments-32.png"
    },

    "background": {
        "scripts": [
            "js/shared.js",
            "js/background.js"
        ]
    },

    "icons": {
        "16": "images/hide-comments-16.png",
        "32": "images/hide-comments-32.png",
        "48": "images/hide-comments-48.png",
        "64": "images/hide-comments-64.png",
        "128": "images/hide-comments-128.png"
    },

    "content_scripts": [
        {
            "js": [
                "js/arrive.min.js",
                "js/shared.js",
                "js/content_script.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
