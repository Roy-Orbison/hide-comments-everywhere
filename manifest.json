{
    "manifest_version": 2,
    "author": "Grant Winney",
    "homepage_url": "https://github.com/grantwinney/chrome-extension-block-comments",

    "name": "Hide Comments",
    "description": "Hides some major commenting systems like Disqus, Livefyre, Facebook plugin, WordPress, YouTube, etc.",
    "version": "1.0.2",

    "update_url": "http://clients2.google.com/service/update2/crx",

    "options_page": "options.html",

    "permissions": [
        "storage"
    ],

    "browser_action": {
        "default_icon": "images/hide-comments-32.png"
    },

    "background": {
        "scripts": ["js/background.js"]
    },

    "content_scripts": [
        {
            "css": [
                "css/youtube.css"
            ],
            "matches": [
                "*://*.youtube.com/*"
            ]
        },
        {
            "css": [
                "css/other.css"
            ],
            "matches": [
                "<all_urls>"
            ],
            "exclude_matches": [
                "*://*.youtube.com/*"
            ]
        }
    ],

    "icons": {
        "16": "images/hide-comments-16.png",
        "32": "images/hide-comments-32.png",
        "48": "images/hide-comments-48.png",
        "64": "images/hide-comments-64.png",
        "128": "images/hide-comments-128.png"
    }
}
