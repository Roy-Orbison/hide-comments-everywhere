{
    "manifest_version": 2,
    "author": "Grant Winney",
    "homepage_url": "https://github.com/grantwinney/chrome-extension-block-comments",

    "name": "Hide Comments",
    "description": "Hides some major commenting systems like Disqus, Livefyre, Facebook plugin, WordPress, YouTube, etc.",
    "version": "1.0.0",

    "update_url": "http://clients2.google.com/service/update2/crx",

    "content_scripts": [
        {
            "css": [
                "css/youtube.css"
            ],
            "matches": [
                "*://*.youtube.com/*"
            ]
        },
        {
            "css": [
                "css/twitch.css"
            ],
            "matches": [
                "*://*.twitch.com/*"
            ]
        },
        {
            "css": [
                "css/other.css"
            ],
            "matches": [
                "<all_urls>"
            ],
            "exclude_matches": [
                "*://*.youtube.com/*",
                "*://*.twitch.com/*"
            ]
        }
    ]
}
